@model contactsManager.Domain.Contact

@{
    ViewBag.Title = "Detail";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3><b>@Model.FirstName @Model.LastName</b> </h3>

            <button type="button" class="btn-info">@Html.ActionLink("Edit", "Edit", new { Model.Id }, null)</button>
   
        </div>

    <table class="table table-striped table-bordered">

        <tr>
            <td class="col-md-2"><b>Phone Number</b></td>
            <td><b>@Model.PhoneNumber</b></td>
        </tr>

        <tr>
            <td class="col-md-2 "><b>Email</b></td>
            <td><b>@Model.Email</b></td>
        </tr>


    </table>

</div>
@Html.ActionLink("Back to the list", "Index")
